{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schema/cv.schema.json",
  "title": "PersonalCV",
  "type": "object",
  "required": ["meta", "localized"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["defaultLanguage", "availableLanguages", "section_order", "sections"],
      "properties": {
        "defaultLanguage": { "type": "string" },
        "availableLanguages": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string" }
        },
        "section_order": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string" }
        },
        "sections": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["id", "type"],
            "properties": {
              "id": { "type": "string" },
              "type": { "type": "string" }
            },
            "additionalProperties": true
          }
        }
      },
      "additionalProperties": true
    },
    "profile": {
      "type": "object",
      "additionalProperties": true
    },
    "localized": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "required": ["navigation", "overview", "development", "foundation", "highlights", "mindset", "now", "contact"],
        "properties": {
          "navigation": {
            "type": "object",
            "minProperties": 1,
            "additionalProperties": { "type": "string" }
          },
          "overview": {
            "type": "object",
            "required": ["headline", "intro_text"],
            "properties": {
              "headline": { "type": "string" },
              "intro_text": { "type": "string" }
            },
            "additionalProperties": true
          },
          "development": {
            "type": "object",
            "required": ["skills"],
            "properties": {
              "skills": { "type": "array" }
            },
            "additionalProperties": true
          },
          "foundation": {
            "type": "object",
            "required": ["experience"],
            "properties": {
              "experience": { "type": "array" }
            },
            "additionalProperties": true
          },
          "highlights": {
            "type": "object",
            "required": ["items"],
            "properties": {
              "items": { "type": "array" }
            },
            "additionalProperties": true
          },
          "mindset": {
            "type": "object",
            "required": ["blocks"],
            "properties": {
              "blocks": { "type": "array" }
            },
            "additionalProperties": true
          },
          "now": {
            "type": "object",
            "required": ["summary"],
            "properties": {
              "summary": { "type": "string" }
            },
            "additionalProperties": true
          },
          "contact": {
            "type": "object",
            "required": ["cta_label", "cta_link"],
            "properties": {
              "cta_label": { "type": "string" },
              "cta_link": { "type": "string" }
            },
            "additionalProperties": true
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
